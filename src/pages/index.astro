<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8" />
  <title>Página Inicial - Testes de Perfil</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap" rel="stylesheet" />
  <!-- Seu CSS principal -->
  <link rel="stylesheet" href="/style.css" />
  <style>
    /* Estilos adicionais para a página inicial */
    #intro {
      text-align: center;
      margin-top: 50px;
    }
    #intro h1 {
      margin-bottom: 20px;
      font-size: 1.8em;
      color: #333;
    }
    .testes-container {
      margin-top: 30px;
      display: flex;
      flex-direction: column;
      gap: 15px;
      align-items: center;
    }
    .btn-desabilitado {
      background: #aaa;
      cursor: not-allowed;
    }
  </style>
</head>
<body>
  <header>
    <h2>Portal de Testes de Perfil</h2>
  </header>

  <main id="intro">
    <h1>Bem-vindo(a) ao Portal de Testes</h1>
    <p>Por favor, insira seu nome e último sobrenome:</p>
    <input 
      type="text" 
      id="userName" 
      class="input-field" 
      placeholder="SEU NOME (EX.: IVO DIAS)"
      required
      style="text-transform: uppercase;"
    />
    <p>Por favor, insira seu email:</p>
    <input 
      type="email" 
      id="userEmail" 
      class="input-field" 
      placeholder="SEU EMAIL (EX.: FULANO@TESTE.COM)"
      required
      style="text-transform: lowercase;"
    />

    <div class="testes-container">
      <!-- Teste de Sabotadores: Habilitado -->
      <button class="btn" onclick="iniciarSabotadores()">Teste de Sabotadores</button>

      <!-- Futuramente, você pode adicionar outros testes (desabilitados, por ex.) -->
      <button class="btn btn-desabilitado" disabled>Teste DISC (Em Breve)</button>
      <button class="btn btn-desabilitado" disabled>Teste Quociente Emocional (Em Breve)</button>
      <!-- etc... -->
    </div>
  </main>

  <footer id="footer" style="text-align:center; margin-top:20px; font-size:10px; color:#666;">
    © 2025 - Portal de Testes de Perfil
  </footer>

  <script>
    // Simples validação
    function validateFormFields() {
      const nameInput = document.getElementById("userName").value.trim();
      const emailInput = document.getElementById("userEmail").value.trim().toLowerCase();
      if (nameInput.length < 8 || !nameInput.includes(" ")) {
        alert("Por favor, insira seu nome e último sobrenome (mínimo 8 caracteres).");
        return false;
      }
      if (!validateEmail(emailInput)) {
        alert("Por favor, insira um email válido.");
        return false;
      }
      return true;
    }

    // Regex básica para email
    function validateEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(email.toLowerCase());
    }

    // Botão "Teste de Sabotadores"
    function iniciarSabotadores() {
      if (!validateFormFields()) return;

      // Pega os valores
      const name = document.getElementById("userName").value.trim();
      const email = document.getElementById("userEmail").value.trim().toLowerCase();

      // Redireciona para sab.html, passando name e email via query params
      const url = `sab.html?name=${encodeURIComponent(name)}&email=${encodeURIComponent(email)}`;
      window.location.href = url;
    }
  </script>
</body>
</html>
